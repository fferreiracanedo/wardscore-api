# =============================================================================
# WARDSCORE API (GO) - ENVIRONMENT VARIABLES
# =============================================================================
# Copie este arquivo para .env e preencha com seus valores reais

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
HOST=0.0.0.0
API_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
API_SECRET_KEY=your_secret_key_here

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL (Recomendado)
DATABASE_URL="postgresql://username:password@localhost:5432/wardscore"

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
BCRYPT_COST=12

# =============================================================================
# RIOT GAMES API
# =============================================================================
RIOT_CLIENT_ID=your_riot_client_id
RIOT_CLIENT_SECRET=your_riot_client_secret
RIOT_API_KEY=your_riot_api_key
RIOT_REDIRECT_URI=http://localhost:8080/api/auth/riot/callback

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Mapbox (para mapas interativos)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# Redis (para cache - opcional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# PAYMENT (FUTURO)
# =============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =============================================================================
# MONITORING & LOGGING (FUTURO)
# =============================================================================
SENTRY_DSN=your_sentry_dsn
SENTRY_PROJECT=wardscore
SENTRY_ORG=your_org

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
DEBUG=true 